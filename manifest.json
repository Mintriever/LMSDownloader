{
  "manifest_version": 2,
  "name": "DKU Video Downloader",
  "version": "0.1",
  "author": "zini",
  "description": "단국대학교 이러닝 강의 다운로더",
  "browser_action": {
    "name": "DKU Video Downloader",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://dankook.commsonscdn.com/*"],
      "js": ["popup.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["activeTab", "downloads", "<all_urls>"],
  "icons": { "16": "icon.png", "48": "icon.png", "128": "icon.png" }
}
